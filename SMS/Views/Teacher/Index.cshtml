@model SMS_ViewModels.Teacher.TeacherViewModel

@{
    ViewBag.Title = "Teachers";
}

<div class="container-fluid layout">
    <div class="panel panel-default">
        <div class="panel-heading">
            <!--Heading-->
            <div class="text-uppercase headings">
                <h2>Teachers</h2>
            </div>
            <!--search add section-->
            <div class="container-fluid m-2 crudLayoud " id="teacherHead">
                <div class="row justify-content-between align-items-center d-flex flex-wrap">
                    <!-- add btn-->
                    <div class="col-lg-2 col-md-6 mb-2 mb-md-0">
                        <button id="addNew" class="btn">+ Add New Teacher</button>
                    </div>

                    <!--search section-->
                    <div class="col-lg-6 col-md-5 d-flex flex-wrap justify-content-between">
                        <div class="d-flex" id="dataLimit">
                            <label class="col-form-label">Filter </label>
                            <select id="pageSize" class="form-select flex-grow-1">
                                <option value="5" selected>5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                            </select>
                        </div>
                        <div class="d-flex">
                            <label for="isActiveFilter" class="col-form-label">Status: </label>
                            <select class="form-select flex-grow-1" id="isActiveFilter">
                                <option value="">All</option>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <div class="d-flex">
                            <div class="input-group">
                                <select class="form-select" id="searchCriteria">
                                    <option value="" selected>All</option>
                                    <option value="TeacherRegNo">Registration No</option>
                                    <option value="FirstName">First Name</option>
                                    <option value="LastName">Last Name</option>
                                    <option value="DisplayName">Display Name</option>
                                </select>
                            </div>
                            <input type="text" id="searchInput" class="form-control" placeholder="Search...">
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <!--Table Display data-->
        <div class="panel-body">
            <div class="table-responsive">
                <table id="teacherDetails" class="table table-bordered table-striped">
                    <thead class="tableheading text-center">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TeacherList.First().IsEnable)</th>
                            <th class="sortable">@Html.DisplayNameFor(model => model.TeacherList.First().TeacherRegNo)</th>
                            <th class="sortable">@Html.DisplayNameFor(model => model.TeacherList.First().FirstName)</th>
                            <th class="sortable">@Html.DisplayNameFor(model => model.TeacherList.First().LastName)</th>
                            <th class="sortable">@Html.DisplayNameFor(model => model.TeacherList.First().DisplayName)</th>
                            <th>@Html.DisplayNameFor(model => model.TeacherList.First().Email)</th>
                            <th class="sortable">@Html.DisplayNameFor(model => model.TeacherList.First().Gender)</th>
                            <th>@Html.DisplayNameFor(model => model.TeacherList.First().ContactNo)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-center" id="tableBody"></tbody>
                </table>
                <div class="container-fluid w-100" id="paginationNextPrevious">
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <button id="prevButton" class="btn btn-outline-primary page-button" aria-label="Previous" onclick="previousData()">
                                <span aria-hidden="true"><i class="bi bi-chevron-left"></i></span>
                            </button>
                        </li>

                        <li class="page-item">
                            <button id="nextButton" class="btn btn-outline-primary page-button" aria-label="Next" onclick="nextData()">
                                <span aria-hidden="true"><i class="bi bi-chevron-right"></i></span>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!--Partial View section-->
    <div class="partialLayout">
        <div class="container-fluid" style="display:none" id="addTeacherForm">
        </div> 
    </div>

</div>

<!--Specific teacher details in pop up-->
<div class="modal fade" id="teacherDetailsModal" tabindex="-1" role="dialog" aria-labelledby="teacherDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="teacherDetailsModalLabel">Teacher Details</h5>
                <button class="close btn text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body" id="teacherDetailsBody">
            </div>
        </div>
    </div>
</div>





@section Scripts{
    <script src="~/SMS_Scripts/Teacher/Teacher.js"></script>
}
